{
  "name": "@alwatr/pmpa-monorepo",
  "description": "Progressive Multi Page (Web) Application.",
  "repository": "https://github.com/Alwatr/pmpa",
  "author": "S. Ali Mihandoost <ali.mihandoost@gmail.com> (https://ali.mihandoost.com)",
  "license": "MIT",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=18.16.0",
    "yarn": ">=4.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "l": "yarn run lint",
    "b": "yarn run build",
    "br": "run-s build build:r",
    "c": "yarn run clean",
    "cb": "run-s clean build",
    "s": "run-s build serve",
    "w": "yarn run watch",
    "f": "yarn run format",
    "fl": "yarn run format:eslint",
    "fp": "yarn run format:prettier",
    "rl": "run-s pull clean build release",
    "lint": "run-s 'lint:*'",
    "lint:ts": "eslint . --config .eslintrc.json --ext .ts",
    "build": "run-s build:ts build:r",
    "build:ts": "tsc --build",
    "build:r": "lerna run build",
    "format": "run-s format:prettier format:eslint",
    "format:eslint": "yarn run lint:ts --fix",
    "format:prettier": "prettier . --ignore-path .gitignore --write",
    "clean": "git clean -d -x -f --exclude=node_modules --exclude='*.env' --exclude=_data --exclude='.pnp*' --exclude=.yarn",
    "watch": "run-p 'watch:*'",
    "watch:ts": "yarn run build:ts --watch --preserveWatchOutput",
    "update": "run-s 'update:*'",
    "update:yarn": "yarn set version stable",
    "update:sdk": "yarn dlx @yarnpkg/sdks",
    "pull": "git pull",
    "release": "lerna version",
    "publish": "lerna publish from-package"
  },
  "devDependencies": {
    "@lerna-lite/changed": "^2.7.2",
    "@lerna-lite/cli": "^2.7.2",
    "@lerna-lite/diff": "^2.7.2",
    "@lerna-lite/exec": "^2.7.2",
    "@lerna-lite/publish": "^2.7.2",
    "@lerna-lite/run": "^2.7.2",
    "@lerna-lite/version": "^2.7.2",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-lit": "^1.10.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.0",
    "ts-lit-plugin": "^2.0.1",
    "tslib": "^2.6.2",
    "typescript": "^5.3.2"
  },
  "packageManager": "yarn@4.0.2"
}
