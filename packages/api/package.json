{
  "name": "@alwatr/pmpa-api",
  "version": "0.1.0",
  "description": "Alwatr Progressive Multi Page (Web) Application.",
  "private": true,
  "type": "module",
  "author": "S. Ali Mihandoost <ali.mihandoost@gmail.com> (https://ali.mihandoost.com)",
  "license": "MIT",
  "engines": {
    "node": ">=18.16.0",
    "yarn": ">=4.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Alwatr/storage",
    "directory": "packages/api"
  },
  "homepage": "https://github.com/Alwatr/storage#readme",
  "bugs": {
    "url": "https://github.com/Alwatr/storage/issues"
  },
  "nano-build": {
    "outbase": "src",
    "outfile": "dist/main.mjs"
  },
  "nano-build-development": {
    "minify": false
  },
  "nano-build-production": {
    "packages": null
  },
  "scripts": {
    "s": "yarn run start",
    "b": "yarn run build",
    "w": "yarn run watch:es",
    "c": "yarn run clean",
    "cb": "run-s clean build",
    "start": "run-s clean build serve",
    "build": "nano-build",
    "watch:es": "nano-build --watch",
    "clean": "rm -rfv dist .tsbuildinfo",
    "serve": "yarn node --enable-source-maps dist/main.mjs",
    "serve:debug": "yarn node --inspect --enable-source-maps dist/index.js"
  },
  "devDependencies": {
    "@alwatr/crypto": "^3.0.4",
    "@alwatr/logger": "^2.4.1",
    "@alwatr/nano-build": "^1.0.0",
    "@alwatr/nano-server": "^1.2.7",
    "@alwatr/storage-sdk": "^4.0.4",
    "@alwatr/type": "^1.2.4",
    "@alwatr/util": "^1.4.1",
    "@types/node": "^20.10.5",
    "esbuild": "^0.19.10",
    "npm-run-all": "^4.1.5",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  }
}
