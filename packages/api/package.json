{
  "name": "@alwatr/pmpa-api",
  "version": "0.1.0",
  "description": "Alwatr Progressive Multi Page (Web) Application.",
  "author": "S. Ali Mihandoost <ali.mihandoost@gmail.com>",
  "private": true,
  "type": "module",
  "license": "MIT",
  "engines": {
    "node": ">=18.16.0",
    "yarn": ">=4.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Alwatr/pmpa",
    "directory": "packages/api"
  },
  "homepage": "https://github.com/Alwatr/pmpa#readme",
  "bugs": {
    "url": "https://github.com/Alwatr/pmpa/issues"
  },
  "prettier": "@alwatr/prettier-config",
  "scripts": {
    "s": "yarn run start",
    "b": "yarn run build",
    "w": "yarn run watch",
    "c": "yarn run clean",
    "cb": "yarn run clean && yarn run build",
    "cw": "yarn run clean && yarn run watch",
    "d": "yarn run build:es && ALWATR_DEBUG=1 yarn node",
    "build": "yarn run build:ts & yarn run build:es",
    "build:es": "nano-build --preset=microservice",
    "build:ts": "tsc --build",
    "watch": "yarn run watch:ts & yarn run watch:es",
    "watch:es": "yarn run build:es --watch",
    "watch:ts": "yarn run build:ts --watch --preserveWatchOutput",
    "clean": "rm -rfv dist .tsbuildinfo",
    "serve": "yarn node --enable-source-maps dist/main.mjs",
    "serve:debug": "yarn node --inspect --enable-source-maps dist/index.js"
  },
  "devDependencies": {
    "@alwatr/crypto": "^3.0.4",
    "@alwatr/logger": "^2.4.1",
    "@alwatr/nano-build": "^1.2.0",
    "@alwatr/nano-server": "^1.2.7",
    "@alwatr/prettier-config": "^1.0.4",
    "@alwatr/storage-sdk": "^4.0.4",
    "@alwatr/tsconfig-base": "^1.0.4",
    "@alwatr/type": "^1.2.4",
    "@alwatr/util": "^1.4.1",
    "@types/node": "^20.10.5",
    "esbuild": "^0.19.10",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.3.3"
  }
}
