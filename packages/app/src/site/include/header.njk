<header class="h-[80px] text-center flex items-center justify-center shadow-md bg-white">
    <div class="max-w-screen-xl w-full flex items-center justify-between">
      <!-- Logo -->
      <div class="flex items-center gap-2">
        <img src="/img/exchange-logo.svg" alt="">
        <span class="text-titleLarge"><span class="font-bold">Exir</span> Exchange</span>
      </div>
      <!-- Search -->
      <div class="flex items-center gap-2">
        <div class="w-96 flex bg-gray-200 p-2 rounded-full text-gray-400 font-medium px-4">
          <div class="border-r-2 border-gray-400 px-2">
            <span>All</span>
            <span>{% alwatrIcon "keyboard_arrow_down" %}</span>
          </div>
          <div class="px-2">
            <span>{% alwatrIcon "search" %}</span>
            <span>Search...</span>
          </div>

        </div>
      </div>
      <!-- links -->
      <div class="flex items-center gap-2">
        <ul class="flex gap-4 font-medium">
          <li>All Exchanges</li>
          <li>Suggest An Exchange</li>
        </ul>
      </div>
      <!-- toolbar -->
      <div class="flex items-center gap-2">
        <div class="flex gap-8 items-center">
          <div>
            <span>EN</span>
            <span>{% alwatrIcon "keyboard_arrow_down" %}</span>
          </div>
          <div class="flex items-center gap-2">
            <img class="h-6" src="/img/profile-img.png" alt="">
            <!-- name -->
            <span>John Dose</span>
            <!-- arrow down -->
            <span>{% alwatrIcon "keyboard_arrow_down" %}</span>
          </div>
          <div>
            <button class="bg-gradient-to-br from-purple-700	 to-blue-700 py-2 px-4 rounded-full text-white font-medium">
              <span>{% alwatrIcon "edit_note" %}</span>
              <span>Contribute</span>
            </button>
          </div>
        </div>
      </div>
    </div>
  </header> 