{
  "name": "@alwatr/pmpa-app",
  "private": true,
  "version": "2.0.1",
  "description": "Alwatr Progressive Multi Page (Web) Application.",
  "main": "main.js",
  "type": "module",
  "types": "main.d.ts",
  "author": "S. Ali Mihandoost <ali.mihandoost@gmail.com> (https://ali.mihandoost.com)",
  "license": "MIT",
  "files": [
    "**/*.{d.ts.map,d.ts,js.map,js,html,md,svg,css}"
  ],
  "scripts": {
    "b": "yarn run build",
    "c": "yarn run clean",
    "cb": "run-s clean build",
    "cw": "run-s clean watch",
    "l": "yarn run lint",
    "s": "yarn run start",
    "w": "yarn run watch",
    "clean": "rm -rf dist .tsbuildinfo",
    "lint": "run-s 'lint:*'",
    "lint:ts": "tsc --build",
    "build": "yarn node script/build.js",
    "watch": "yarn watch:11ty",
    "watch:ts": "yarn run lint:ts --watch --preserveWatchOutput",
    "watch:11ty": "yarn run build --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Alwatr/pmpa",
    "directory": "packages/app"
  },
  "homepage": "https://github.com/Alwatr/pmpa/tree/next/packages/app#readme",
  "bugs": {
    "url": "https://github.com/Alwatr/pmpa/issues"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@alwatr/logger": "^2.2.0",
    "esbuild": "^0.19.7",
    "eslint": "^8.54.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.0",
    "tslib": "^2.6.2",
    "typescript": "^5.3.2"
  }
}
