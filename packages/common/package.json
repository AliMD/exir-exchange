{
  "name": "@alwatr/weaver-common",
  "version": "1.5.0",
  "description": "Alwatr Progressive Multi Page (Web) Application.",
  "author": "S. Ali Mihandoost <ali.mihandoost@gmail.com>",
  "private": true,
  "type": "module",
  "types": "./dist/main.d.ts",
  "main": "./dist/main.cjs",
  "module": "./dist/main.mjs",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/main.mjs",
      "require": "./dist/main.cjs"
    }
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Alwatr/pmpa",
    "directory": "packages/common"
  },
  "homepage": "https://github.com/Alwatr/pmpa#readme",
  "bugs": {
    "url": "https://github.com/Alwatr/pmpa/issues"
  },
  "prettier": "@alwatr/prettier-config",
  "scripts": {
    "b": "yarn run build",
    "w": "yarn run watch",
    "c": "yarn run clean",
    "cb": "yarn run clean && yarn run build",
    "d": "yarn run build:es && ALWATR_DEBUG=1 yarn node",
    "build": "yarn run build:ts & yarn run build:es",
    "build:es": "nano-build --preset=module",
    "build:ts": "tsc --build",
    "watch": "yarn run watch:ts & yarn run watch:es",
    "watch:es": "yarn run build:es --watch",
    "watch:ts": "yarn run build:ts --watch --preserveWatchOutput",
    "clean": "rm -rfv dist *.tsbuildinfo"
  },
  "devDependencies": {
    "@alwatr/dedupe": "^1.0.13",
    "@alwatr/nano-build": "^1.3.9",
    "@alwatr/prettier-config": "^1.0.4",
    "@alwatr/tsconfig-base": "^1.2.0",
    "@alwatr/type-helper": "^1.2.6",
    "@types/node": "^22.5.5",
    "typescript": "^5.6.2"
  }
}
