{
  "name": "alwatr",
  "displayName": "Alwatr",
  "version": "1.0.0-0",
  "description": "Alwatr Ecosystem",
  "author": "S. Ali Mihandoost <ali.mihandoost@gmail.com>",
  "keywords": [
    "alwatr"
  ],
  "private": true,
  "type": "module",
  "main": "./dist/main.cjs",
  "module": "./dist/main.mjs",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/main.mjs",
      "require": "./dist/main.cjs"
    },
    "./nanotron": {
      "types": "./dist/nanotron.d.ts",
      "import": "./dist/nanotron.mjs",
      "require": "./dist/nanotron.cjs"
    },
    "./nitrobase": {
      "types": "./dist/nitrobase.d.ts",
      "import": "./dist/nitrobase.mjs",
      "require": "./dist/flux.cjs"
    },
    "./nanolib": {
      "types": "./dist/nanolib.d.ts",
      "import": "./dist/nanolib.mjs",
      "require": "./dist/nanolib.cjs"
    },
    "./flux": {
      "types": "./dist/flux.d.ts",
      "import": "./dist/flux.mjs",
      "require": "./dist/flux.cjs"
    },
    "./fract": {
      "types": "./dist/fract.d.ts",
      "import": "./dist/fract.mjs",
      "require": "./dist/fract.cjs"
    }
  },
  "license": "AGPL-3.0-only",
  "files": [
    "**/*.{js,mjs,cjs,map,d.ts,html,md}",
    "!demo/**/*"
  ],
  "engines": {
    "node": ">=18.16.0",
    "yarn": ">=4.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Alwatr/weaver",
    "directory": "packages/alwatr"
  },
  "homepage": "https://github.com/Alwatr/weaver#readme",
  "bugs": {
    "url": "https://github.com/Alwatr/weaver/issues"
  },
  "prettier": "@alwatr/prettier-config",
  "nano-build": {
    "entryPoints": [
      "src/*.ts"
    ]
  },
  "scripts": {
    "b": "yarn run build",
    "t": "yarn run test",
    "w": "yarn run watch",
    "c": "yarn run clean",
    "cb": "yarn run clean && yarn run build",
    "d": "yarn run build:es && yarn node --enable-source-maps --trace-warnings",
    "build": "yarn run build:ts && yarn run build:es",
    "build:es": "nano-build --preset=module",
    "build:ts": "tsc --build",
    "test": "NODE_OPTIONS=\"$NODE_OPTIONS --enable-source-maps --experimental-vm-modules\" jest",
    "watch": "yarn run watch:ts & yarn run watch:es",
    "watch:es": "yarn run build:es --watch",
    "watch:ts": "yarn run build:ts --watch --preserveWatchOutput",
    "clean": "rm -rfv dist *.tsbuildinfo"
  },
  "dependencies": {
    "@alwatr/flux": "^3.1.1",
    "@alwatr/fract": "^1.2.7",
    "@alwatr/nanolib": "^1.0.2",
    "@alwatr/nanotron": "^4.2.2",
    "@alwatr/nitrobase": "^7.2.1"
  },
  "devDependencies": {
    "@alwatr/nano-build": "^1.6.0",
    "@alwatr/prettier-config": "^1.0.5",
    "@alwatr/tsconfig-base": "^1.3.1",
    "typescript": "^5.6.3"
  }
}
